<h1>ブログ一覧</h1>
<p class="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <% @blogs.each do |blog| %>
      <div class="col-xs-12 col-md-6 blog-panel">

        <h2><%= blog.title %></h2>
        <p><%= blog.content %></p>
        <% if blog.image.thumb.url %>
          <p><%= image_tag(blog.image.thumb.url) %></p>
        <% end %>

        <div class="clearfix">
          <div class="avator">
            <% if blog.user.avatar.thumb.url %>
              <%= image_tag(blog.user.avatar.thumb.url) %>
            <% else %>
              <%= image_tag("/assets/no_image.png") %>
            <% end %>
          </div>
          <div class="info">投稿者: <%= blog.user.name %>
            <div><%= blog.created_at %></div>
            <div class="blog-links">
              <%= link_to '確認', blog_path(blog.id), class: 'btn-default' %>
              <% if logged_in? && blog.user_id == current_user.id %>
                <%= link_to '編集', edit_blog_path(blog.id), class: 'btn-info' %> |
                <%= link_to '削除', blog_path(blog.id), method: :delete, \
                    data: {confirm: '削除しますか？'},  class: 'btn-danger' %>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>
