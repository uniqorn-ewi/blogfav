<h1>ブログ一覧</h1>
<p class="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <% @blogs.each do |blog| %>
      <div class="col-xs-12 col-md-6 blog-panel">
        <h2><%= blog.title %></h2>
        <p><%= blog.content %></p>
        <p><%= blog.created_at %></p>
        <div class="blog-links">
          <%= link_to '確認', blog_path(blog.id), class: 'btn-default' %>
          <%= link_to '編集', edit_blog_path(blog.id), class: 'btn-info' %> |
          <%= link_to '削除', blog_path(blog.id), method: :delete, data: {confirm: '削除しますか？'}, class: 'btn-danger' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
