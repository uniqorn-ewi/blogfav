<h1><%= @user.name %>のページ</h1>
<p>メールアドレス: <%= @user.email %></p>
<p>アイコン画像:</p>
<% unless @user.avatar.file.nil? %>
  <p><%= image_tag(@user.avatar.url) %></p>
<% else %>
  <p><%= image_tag("/assets/no_image.png") %></p>
<% end %>

<div class="container">
  <div class="row">
    <% @favorite_blogs.each do |blog| %>
      <div class="col-xs-12 col-md-6 blog-panel">

        <h2><%= blog.title %></h2>
        <p><%= blog.content %></p>
        <% unless blog.image.file.nil? %>
          <p><%= image_tag(blog.image.url) %></p>
        <% end %>

        <div class="clearfix">
          <div class="avator">
            <% unless blog.user.avatar.thumb.file.nil? %>
              <%= image_tag(blog.user.avatar.thumb.url) %>
            <% else %>
              <%= image_tag("/assets/no_image.png") %>
            <% end %>
          </div>
          <div class="info">投稿者: <%= blog.user.name %>
            <div><%= blog.created_at %></div>
            <div class="blog-links">
              <%= link_to "お気に入り解除する", favorite_path(blog_id: blog.id), \
                  method: :delete, class: 'btn-danger' %>
            </div>
          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>
